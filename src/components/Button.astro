---
export interface Props {
  href?: string;
  variant?: 'primary' | 'ghost' | 'accent';
  as?: 'a' | 'button';
}
const { href = '#', variant = 'accent', as = 'a' } = Astro.props as Props;
const base = 'inline-flex items-center justify-center rounded-[4px] px-4 py-2 text-sm transition-colors focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2';
const variants: Record<string, string> = {
  primary: 'bg-white text-black hover:bg-neutral-200 focus-visible:outline-[#fff] border border-transparent',
  ghost: 'border border-border text-text-primary hover:border-accent hover:text-white',
  accent: 'bg-accent text-black hover:bg-accent-soft focus-visible:outline-[var(--focus)] border border-transparent',
};
---
{as === 'a' ? (
  <a href={href} class={`${base} ${variants[variant]}`}>
    <slot />
  </a>
) : (
  <button class={`${base} ${variants[variant]}`}>
    <slot />
  </button>
)}

