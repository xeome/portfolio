---
import Button from "./Button.astro";
export interface Props { tagline?: string }
const { tagline = "Engineering for the nanosecond." } = Astro.props as Props;
---
<section id="hero" class="grid grid-cols-1 gap-10 place-items-center text-center w-full">
  <div class="flex flex-col gap-6 items-center">
    <div class="section-label">Vision</div>

    <h1 class="text-[clamp(2.75rem,6vw,4.2rem)] font-light leading-tight">
      {tagline}
    </h1>
    <p class="text-text-muted max-w-[52ch]">
      I design and optimize low-level systems with an obsession for latency,
      throughput and efficiency.
    </p>
    <div class="flex gap-3 justify-center">
      <Button href="#contact" variant="primary">Contact</Button>
      <Button href="#projects" variant="ghost">Projects</Button>
    </div>
  </div>

</section>






